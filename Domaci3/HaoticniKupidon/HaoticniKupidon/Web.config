<?xml version="1.0"?>
<configuration>

  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  <system.web>
    <compilation debug="true" targetFramework="4.7.2" />
    <httpRuntime targetFramework="4.7.2"/>
  </system.web>
  <system.serviceModel>
	  
	  <services>
		  <service name="HaoticniKupidon.Service1" behaviorConfiguration="ServiceBehavior">
			  <!-- Define endpoint for the main service -->
			  <endpoint address=""
						binding="netTcpBinding"
						bindingConfiguration="NetTcpBindingConfig"
						contract="HaoticniKupidon.IRegistration" />

			  <endpoint address="letters"
						binding="netTcpBinding"
						bindingConfiguration="NetTcpBindingConfig"
						contract="HaoticniKupidon.ILetterExchange" />

			  <!-- Add an endpoint for metadata exchange (useful for testing and client generation) -->
			  <endpoint address="mex"
						binding="mexTcpBinding"
						contract="IMetadataExchange" />

			  <!-- Specify the base address for the service -->
			  <host>
				  <baseAddresses>
					  <add baseAddress="net.tcp://localhost:8080/Kupidon" />
				  </baseAddresses>
			  </host>
		  </service>
	  </services>
	  
	  <bindings>
		  <netTcpBinding>
			  <binding name="NetTcpBindingConfig" maxConnections="100">
				  <reliableSession enabled="true" />
				  <security mode="None" />
				  <!-- Use "None" for development. Use "Transport" or "Message" in production -->
			  </binding>
		  </netTcpBinding>
	  </bindings>

	  <behaviors>
		  <serviceBehaviors>
			  <behavior name="ServiceBehavior">
				  <!-- Enable metadata for client generation -->
				  <serviceMetadata httpGetEnabled="false" />
				  <serviceDebug includeExceptionDetailInFaults="true" />
			  </behavior>
		  </serviceBehaviors>
	  </behaviors>
    <protocolMapping>
        <add binding="basicHttpsBinding" scheme="https" />
    </protocolMapping>    
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
    <!--
        To browse web app root directory during debugging, set the value below to true.
        Set to false before deployment to avoid disclosing web app folder information.
      -->
    <directoryBrowse enabled="true"/>
  </system.webServer>

</configuration>
